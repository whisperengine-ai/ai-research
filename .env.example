# Environment Configuration
# Copy this to .env and add your actual API keys

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Alternative models you can use with OpenRouter:
# OPENROUTER_MODEL=openai/gpt-4-turbo-preview
# OPENROUTER_MODEL=openai/gpt-3.5-turbo
# OPENROUTER_MODEL=meta-llama/llama-3-70b-instruct
# OPENROUTER_MODEL=google/gemini-pro
# OPENROUTER_MODEL=mistralai/mistral-large

# Optional: Site name for OpenRouter (for tracking)
OPENROUTER_SITE_NAME=consciousness-simulator
OPENROUTER_SITE_URL=http://localhost

# Emotion Detection Model (HuggingFace)
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# spaCy Model
SPACY_MODEL=en_core_web_md

# Consciousness Settings
RECURSION_DEPTH=3
WORKING_MEMORY_CAPACITY=7
CONVERSATION_MEMORY_TURNS=20

# Debug Mode
VERBOSE=true
